    <Button GridPane.columnIndex="20" GridPane.rowIndex="4" />

    <Button text="Printed Receipt" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="8" />
    <HBox alignment="center" spacing="10" GridPane.columnIndex="6" GridPane.rowIndex="8">
        <Button fx:id="one" onAction="#oneButtonMethod" text="1" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <Button fx:id="two" onAction="#twoButtonMethod" text="2" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        <Button fx:id="three" onAction="#threeButtonMethod" text="3" GridPane.columnIndex="2" GridPane.rowIndex="8" />
    </HBox>
    <Button onAction="#toPinEntry" text="Card Slot" GridPane.columnIndex="9" GridPane.columnSpan="9" GridPane.rowIndex="8" />
                                                                                <!--submit to pin or card withheld page-->

    <HBox alignment="center" spacing="10" GridPane.columnIndex="6" GridPane.rowIndex="9">
        <Button fx:id="four" onAction="#fourButtonMethod" text="4" GridPane.columnIndex="13" GridPane.rowIndex="9" />
        <Button fx:id="five" onAction="#fiveButtonMethod" text="5" GridPane.columnIndex="14" GridPane.rowIndex="9" />
        <Button fx:id="six" onAction="#sixButtonMethod" text="6" GridPane.columnIndex="15" GridPane.rowIndex="9" />
    </HBox>
    <Button fx:id="enter" text="Enter" GridPane.columnIndex="9" GridPane.columnSpan="9" GridPane.rowIndex="9" />

    <HBox alignment="center" spacing="10" GridPane.columnIndex="6" GridPane.rowIndex="10">
        <Button fx:id="seven" onAction="#sevenButtonMethod" text="7" GridPane.columnIndex="0" GridPane.rowIndex="10" />
        <Button fx:id="eight" onAction="#eightButtonMethod" text="8" GridPane.columnIndex="1" GridPane.rowIndex="10" />
        <Button fx:id="nine" onAction="#nineButtonMethod" text="9" GridPane.columnIndex="2" GridPane.rowIndex="10" />
    </HBox>
    <Button fx:id="clear" onAction="#clearEntry" text="Clear" GridPane.columnIndex="9" GridPane.columnSpan="9" GridPane.rowIndex="10" />
                                                                                    <!--clear all number button clicks-->

    <HBox alignment="center" spacing="10" GridPane.columnIndex="6" GridPane.rowIndex="11">
        <Button fx:id="zero" onAction="#zeroButtonMethod" text="0" GridPane.columnIndex="1" GridPane.rowIndex="11" />
    </HBox>
    <Button fx:id="cancel" text="Cancel" GridPane.columnIndex="9" GridPane.columnSpan="9" GridPane.rowIndex="11" />


    <Button text="Cash Dispenser" GridPane.columnIndex="1" GridPane.columnSpan="9" GridPane.rowIndex="12" />
    <Button text="Deposit Slot" GridPane.columnIndex="7" GridPane.columnSpan="9" GridPane.rowIndex="12" />
