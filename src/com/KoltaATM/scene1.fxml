    <Button GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <Label text="Welcome to the KoltaATM ATM machine." GridPane.columnIndex="2" GridPane.columnSpan="20" GridPane.rowIndex="1" />
    <Label text="Please insert your ATM card." GridPane.columnIndex="2" GridPane.columnSpan="20" GridPane.rowIndex="2" />
    <Label text="(Enter the # with the buttons and press 'Card Slot')" GridPane.columnIndex="2" GridPane.columnSpan="20" GridPane.rowIndex="3" />

    <Button GridPane.columnIndex="20" GridPane.rowIndex="1" />
    <Button GridPane.columnIndex="20" GridPane.rowIndex="2" />
