<GridPane alignment="center" hgap="10" stylesheets="@Animate.css" vgap="10" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.KoltaATM.Scene1Controller">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <Button GridPane.columnIndex="0" GridPane.rowIndex="1" />
